<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Interactive_Quiz.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center" >
        <Label x:Name="Title" Text="title" FontSize="Title"  HorizontalOptions="Center"/>
        <Label x:Name="QuestionText" Text="Question text" HorizontalOptions="Center" FontSize="Large" HeightRequest="100"/>
        <StackLayout Orientation="Horizontal">
            <Button x:Name="A1Butt" Text="A1" Clicked="A1Butt_Clicked" WidthRequest="95" />
            <Button x:Name="A2Butt" Text="A2" Clicked="A1Butt_Clicked" WidthRequest="95"/>
            <Button x:Name="A3Butt" Text="A3" Clicked="A1Butt_Clicked" WidthRequest="95"/>
            <Button x:Name="A4Butt" Text="A4" Clicked="A1Butt_Clicked" WidthRequest="95"/>

        </StackLayout>
        <Button x:Name="NextButt" Text="Next Question" Clicked="NextButt_Clicked" />


    </StackLayout>

</ContentPage>
